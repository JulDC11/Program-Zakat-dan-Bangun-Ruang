				cout<<"		     4. Zakat Harta karun\n";
				cout<<"		     5. Zakat Pertanian\n";
				cout<<"		     6. Zakat Peternakan\n";
				cout<<"		     7. Zakat Perniagaan\n";
				cout<<"		     8. Zakat Penghasilan\n";
				cout<<"		     9. Zakat Tabungan\n";
				cout<<"		     10.Zakat Investasi\n"<<endl;


				cout<<"masukan angka zakat yang diinginkan :";cin>>zakat;
