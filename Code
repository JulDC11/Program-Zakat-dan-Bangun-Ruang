					 default:
						  cout<<"pilihan anda salah\n";
						  cout<<"masukan pilihan yang tepat 1-9\n";
				}
				break;
		  default:
						  cout<<"pilihan anda salah\n";
						  cout<<"masukan pilihan yang tepat 1 dan 2\n";
	 }

