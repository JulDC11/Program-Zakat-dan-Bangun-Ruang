					 long orang,beras,uang,zakat,total,tb,barang,pendapatan,gram,inves,z;
					 int fitrah,emas,perak,hk,pertanian,peternakan,perniagaan,penghasilan,tabungan,investasi;
					 case 1:
						  cout<<"  1. Zakat fitrah\n ";
						  cout<<"masukan jumlah orang :";cin>>orang;
						  beras=2.5*orang;
