						  cout<<"  1  Beras\n";
						  cout<<"  2  Uang\n";
						  cout<<"pilih Beras atau Uang : \n";cin>>fitrah;
						  switch(fitrah)

						  {
								case 1:
									 cout<<"Beras (kg) :"<<beras<<endl;
									 break;
								case 2:
									 cout<<"Uang : Rp."<<uang<<endl;
									 break;
						  }


						  break;
					 case 2:
					      {
						  int a,b,c,z;
                          cout<<"Masukkan Jumlah Harta Emas ( Gram ) : ";
                          cin>>a;

                          if (a>=86) {
                          cout<<"\n";
                          cout<<" ===============================\n";
                          cout<<"||Anda Termasuk Wajib Zakat !! ||\n";
                          cout<<" ===============================\n";
                          cout<<"\nSilahkan Isi Data Berikut : \n";
                          cout<<"Masukkan Ulang Jumlah Harta Emas ( Gram ): ";
                          cin>>b;
                          cout<<"Masukkan Harga Emas : Rp. ";
                          cin>>c;
                          z=2.5/100*b*c;
                          cout<<"zakat yang anda keluarkan : Rp. "<<z<<endl;
                          } else {
                          cout<<"\n";
                          cout<<" ======================================\n";
                          cout<<"||Anda Belum Termasuk Wajib Zakat..!! ||\n";
                          cout<<" ======================================\n";
                          }
                          }
						  break;
					 case 3:
						   {
						  int a,b,c,z;
                          cout<<"Masukkan Jumlah Harta Perak ( Gram ) : ";
                          cin>>a;

                          if (a>=86) {
                          cout<<"\n";
                          cout<<" ===============================\n";
                          cout<<"||Anda Termasuk Wajib Zakat !! ||\n";
                          cout<<" ===============================\n";
                          cout<<"\nSilahkan Isi Data Berikut : \n";
                          cout<<"Masukkan Ulang Jumlah Harta Perak ( Gram ): ";
                          cin>>b;
                          cout<<"Masukkan Harga Perak : Rp. ";
                          cin>>c;
                          z=2.5/100*b*c;
                          cout<<"zakat yang anda keluarkan : Rp. "<<z<<endl;
                          } else {
                          cout<<"\n";
                          cout<<" ======================================\n";
                          cout<<"||Anda Belum Termasuk Wajib Zakat..!! ||\n";
                          cout<<" ======================================\n";
                          }
                          }
                          break;
