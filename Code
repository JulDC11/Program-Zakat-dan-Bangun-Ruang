					 float s,keliling,luas,pi,r,alas,tinggi,diagonal1,diagonal2,sisiatas,sisibawah,panjang,lebar,sisimiring;
					 int persegi,lingkaran,segitiga,layanglayang,persegipanjang,jajargenjang,trapesium_sk,trapesium_siku,belahketupat;
					 case 1:
						  cout<<"  1. persegi\n ";
						  cout<<"masukan nilai s :";cin>>s;
						  keliling=4*s;
						  luas=s*s;


						  cout<<"MEMILIH JENIS OPERASI\n";
						  cout<<"  1  memilih keliling\n";
						  cout<<"  2  memilih luas\n";
						  cout<<" pilih luas atau keliling yang diinginkan: \n";cin>>persegi;
						  switch(persegi)

						  {
								case 1:
									 cout<<"nilai keliling anda :"<<keliling<<endl;
									 break;
								case 2:
									 cout<<"nilai luas anda :"<<luas<<endl;
									 break;
						  }


						  break;
					 case 2:
						  pi=3.14;
						  cout<<" 2. lingkaran\n";
						  cout<<"masukan nilai r :";cin>>r;
						  keliling=2*pi*r;
						  luas=pi*r*r;

						  cout<<"MEMILIH JENIS OPERASI\n";
						  cout<<"  1  memilih keliling\n";
						  cout<<"  2  memilih luas\n";
						  cout<<" pilih luas atau keliling yang diinginkan: \n";cin>>lingkaran;
						  switch(lingkaran)

						  {
								case 1:
									 cout<<"nilai keliling anda :"<<keliling<<endl;
									 break;
								case 2:
									 cout<<"nilai luas anda :"<<luas<<endl;
									 break;
						  }


						  break;
					 case 3:
						  cout<<"3.segitiga\n";
						  cout<<"masukan nilai alas anda :";cin>>alas;
						  cout<<"masukan nilai tinggi anda :";cin>>tinggi;
						  keliling=3*alas;
						  luas=0.5*alas*tinggi;

						  cout<<"MEMILIH JENIS OPERASI\n";
						  cout<<"  1  memilih keliling\n";
						  cout<<"  2  memilih luas\n";
						  cout<<" pilih luas atau keliling yang diinginkan: \n";cin>>segitiga;
						  switch(segitiga)

						  {
								case 1:
									 cout<<"nilai keliling anda :"<<keliling<<endl;
									 break;
								case 2:
									 cout<<"nilai luas anda :"<<luas<<endl;
									 break;
						  }

						  break;
					 case 4:
						  cout<<"4.layang layang\n";
						  cout<<"masukan nilai diagonal 1 :";cin>>diagonal1;
						  cout<<"masukan nilai diagonal 2 :";cin>>diagonal2;
						  cout<<"masukan nilai sisi bawah :";cin>>sisibawah;
						  cout<<"masukan nilai sisi atas :";cin>>sisiatas;
						  luas=0.5*diagonal1*diagonal2;
						  keliling=2*sisibawah+2*sisiatas;

						  cout<<"MEMILIH JENIS OPERASI\n";
						  cout<<"  1  memilih keliling\n";
						  cout<<"  2  memilih luas\n";
						  cout<<" pilih luas atau keliling yang diinginkan: \n";cin>>layanglayang;
						  switch(layanglayang)

						  {
								case 1:
									 cout<<"nilai keliling anda :"<<keliling<<endl;
									 break;
								case 2:
									 cout<<"nilai luas anda :"<<luas<<endl;
									 break;
						  }

						  break;
					 case 5:
						  cout<<"  5. persegi panjang\n ";
						  cout<<"masukan nilai panjang :";cin>>panjang;
						  cout<<"masukan nilai lebar :";cin>>lebar;
						  keliling=2*panjang + 2*lebar;
						  luas=panjang*lebar;


						  cout<<"MEMILIH JENIS OPERASI\n";
						  cout<<"  1  memilih keliling\n";
						  cout<<"  2  memilih luas\n";
						  cout<<" pilih luas atau keliling yang diinginkan: \n";cin>>persegipanjang;
						  switch(persegipanjang)

						  {
								case 1:
									 cout<<"nilai keliling anda :"<<keliling<<endl;
									 break;
								case 2:
									 cout<<"nilai luas anda :"<<luas<<endl;
									 break;
						  }


						  break;
					  case 6:
						  cout<<"  6. jajar genjang\n ";
						  cout<<"masukan nilai alas :";cin>>alas;
						  cout<<"masukan nilai tingi :";cin>>tinggi;
						  cout<<"masukan nilai sisi miring :";cin>>sisimiring;
						  keliling=(2*alas) + (2*sisimiring);
						  luas=alas*tinggi;


						  cout<<"MEMILIH JENIS OPERASI\n";
						  cout<<"  1  memilih keliling\n";
						  cout<<"  2  memilih luas\n";
						  cout<<" pilih luas atau keliling yang diinginkan: \n";cin>>jajargenjang;
						  switch(jajargenjang)

						  {
								case 1:
									 cout<<"nilai keliling anda :"<<keliling<<endl;
									 break;
								case 2:
									 cout<<"nilai luas anda :"<<luas<<endl;
									 break;
						  }


						  break;
					  case 7:
						  cout<<"  7. trapesium sama kaki\n ";
						  cout<<"masukan nilai sisi atas :";cin>>sisiatas;
						  cout<<"masukan nilai sisi bawah :";cin>>sisibawah;
						  cout<<"masukan nilai sisi miring :";cin>>sisimiring;
						  cout<<"masukan nilai tinggi :";cin>>tinggi;
						  keliling=2*sisimiring + sisiatas + sisibawah;
						  luas=0.5*tinggi*sisiatas+sisibawah;


						  cout<<"MEMILIH JENIS OPERASI\n";
						  cout<<"  1  memilih keliling\n";
						  cout<<"  2  memilih luas\n";
						  cout<<" pilih luas atau keliling yang diinginkan: \n";cin>>trapesium_sk;
						  switch(trapesium_sk)

						  {
								case 1:
									 cout<<"nilai keliling anda :"<<keliling<<endl;
									 break;
								case 2:
									 cout<<"nilai luas anda :"<<luas<<endl;
									 break;
							}


						  break;
					  case 8:
						  cout<<"  8. trapesium siku siku\n ";
						  cout<<"masukan nilai sisi atas :";cin>>sisiatas;
						  cout<<"masukan nilai sisi bawah :";cin>>sisibawah;
						  cout<<"masukan nilai sisi miring :";cin>>sisimiring;
						  cout<<"masukan nilai tinggi :";cin>>tinggi;
						  keliling=tinggi + sisimiring + sisiatas + sisibawah;
						  luas=0.5*tinggi*sisiatas+sisibawah;


						  cout<<"MEMILIH JENIS OPERASI\n";
						  cout<<"  1  memilih keliling\n";
						  cout<<"  2  memilih luas\n";
						  cout<<" pilih luas atau keliling yang diinginkan: \n";cin>>trapesium_siku;
						  switch(trapesium_siku)

						  {
								case 1:
									 cout<<"nilai keliling anda :"<<keliling<<endl;
									 break;
								case 2:
									 cout<<"nilai luas anda :"<<luas<<endl;
									 break;
							}


						  break;
					  case 9:
						  cout<<"9. belah ketupat\n";
						  cout<<"masukan nilai diagonal 1 :";cin>>diagonal1;
						  cout<<"masukan nilai diagonal 2 :";cin>>diagonal2;
						  cout<<"masukan nilai sisi :";cin>>s;
						  luas=0.5*diagonal1*diagonal2;
						  keliling=4*s;

						  cout<<"MEMILIH JENIS OPERASI\n";
						  cout<<"  1  memilih keliling\n";
						  cout<<"  2  memilih luas\n";
						  cout<<" pilih luas atau keliling yang diinginkan: \n";cin>>belahketupat;
						  switch(belahketupat)

						  {
								case 1:
									 cout<<"nilai keliling anda :"<<keliling<<endl;
