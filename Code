						  cout<<"masukan jumlah penghasilan  : Rp. ";cin>>uang;
						  zakat= uang*0.025;
						  cout<<"yang harus di zakatkan : Rp. "<<zakat<<endl;
						  break;
                      case 9:
						  cout<<"9.Zakat Tabungan\n";
						  cout<<"masukan jumlah tabungan  : Rp. ";cin>>tb;
                          cout<<"masukan jumlah pendapatan  : Rp. ";cin>>pendapatan;
						  zakat= (tb+pendapatan)*0.025;
						  cout<<"yang harus di zakatkan : Rp. "<<zakat<<endl;
						  break;
                     case 10:
						  cout<<"10.Zakat Investasi\n";
						  cout<<"masukan jumlah investasi  : Rp. ";cin>>inves;
                          cout<<"masukan jumlah keuntungan  : Rp. ";cin>>pendapatan;
						  zakat= (inves+pendapatan)*0.025;
						  cout<<"yang harus di zakatkan : Rp. "<<zakat<<endl;
						  break;



					 default:
						  cout<<"pilihan anda salah, pilihlah saya jangan dia \n";
						  cout<<"masukan pilihan yang tepat 1 - 10\n";


					 }
